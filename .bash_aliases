# Conjunto de aliases para bash
alias doc cd ~/Documentos
alias ww cd /var/www/html/
alias tt cd ~/Testes/
alias dow cd ~/Downloads

# Saindo de diretórios
alias cd..='cd ..'
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'

# Evitando erros desnecessários
alias çs='ls'
alias la='ls -a'
alias ll='ls -lah'

# Comandos Uteis
alias gs='git status'
alias gitgraph='git log --graph --all --topo-order --decorate --oneline --boundary'
